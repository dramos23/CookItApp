<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CookItApp.Views.ListaUsuariosPage">
    <ContentPage.Content>
        <ListView ItemsSource="{Binding Usuarios}" VerticalOptions="FillAndExpand" CachingStrategy="RecycleElement">
            <!-- ItemTemplate define como se va a ver el objeto que estamos mostrando (en este caso, un usuario con 3 atributos simples) -->
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="5,0,5,0" HorizontalOptions="StartAndExpand" Orientation="Horizontal">
                            <Label Text="{Binding _Id}" VerticalTextAlignment="Center" FontSize="Small" />
                            <Label Text="{Binding _Email}" VerticalTextAlignment="Center" FontSize="Small" />
                            <Label Text="{Binding _Password}" VerticalTextAlignment="Center" FontSize="Small" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>
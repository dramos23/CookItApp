<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CookItApp.Views.RegisterPage">

    <ContentPage.Content>


        <StackLayout>

                <Entry x:Name="inpEmail" Placeholder="Ingrese aquí tú email"></Entry>
                <Entry x:Name="inpPassword" Placeholder="Ingrese aquí tú Password" IsPassword="True"></Entry>
                <Entry x:Name="inpRetapePassword" Placeholder="Confirma tú Password" IsPassword="True"></Entry>
                <StackLayout Orientation="Horizontal">
                    <Label x:Name="lblGuardarPassword" Text="Save Password"></Label>
                    <Switch IsToggled="False"></Switch>
                </StackLayout>
                <Button x:Name="btnRegistrar" Text="Sign Up" Clicked="PrcRegistrar"></Button>
                <Button Text="Already have account? Sign In" TextColor="Blue" Clicked="Button_Clicked"></Button>
            
        </StackLayout>
    </ContentPage.Content>

</ContentPage>
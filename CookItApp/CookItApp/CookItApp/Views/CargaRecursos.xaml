<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CookItApp.Views.CargaRecursos">
        
    <Grid>

        <Image Source="fondoFrutillas.jpg" Aspect="AspectFill"/>

        <Grid>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid  HorizontalOptions="Center">
                <StackLayout Padding="0,20,0,0" VerticalOptions="CenterAndExpand" Orientation="Vertical">
                    <ActivityIndicator x:Name="ActIndicador" IsRunning="True" IsEnabled="True" BackgroundColor="Transparent" Color="Silver" WidthRequest="100" HeightRequest="100"></ActivityIndicator>
                    <Label x:Name="lblTexto" Text="" TextColor="White" FontSize="Medium"/>
                </StackLayout>
            </Grid>
        </Grid>
        
    </Grid>
</ContentPage>